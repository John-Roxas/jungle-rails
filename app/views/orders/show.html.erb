<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <div class="line-items">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Product</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
        # Loop through line items and display details#
        # initialize the final amount variable (FOR CALCULATION ON THIS PAGE ONLY)#
          <% final_amount = 0 %>
          <% @order.line_items.each do |line_item| %>
            <tr>
              <td>
                <%= image_tag line_item.product.image.thumb.url, alt: line_item.product.name, class: "product-image" %>
                <%= line_item.product.name %>
              </td>
              <td><%= line_item.product.description %></td>
              <td><%= line_item.quantity %></td>
              <td>$<%= line_item.product.price %></td>
              <td>$<%= line_item.total_price %></td>
            </tr>
            <% final_amount += line_item.total_price %>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="order-details">
      <p><strong>Final Amount:</strong> $<%= final_amount %></p>
      <p><strong>Email:</strong> <%= @order.email %></p>
    </div>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
